{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "PlatformIO: Build",
			"type": "shell",
			"command": "pio run",
			"problemMatcher": [
				"$platformio"
			],
			"group": "build"
		},
		{
			"label": "Erase ESP32 Flash",
			"type": "shell",
			"command": "pio",
			"args": [
				"run",
				"--target",
				"erase"
			]
		},
		{
			"label": "Erase ESP32 Flash",
			"type": "shell",
			"command": "pio run --target erase"
		},
		{
			"label": "Erase ESP32 Flash (Copilot)",
			"type": "shell",
			"command": "pio",
			"args": [
				"run",
				"--target",
				"erase"
			]
		},
		{
			"label": "CAN Serial Probe",
			"type": "shell",
			"command": "python",
			"args": [
				"tools\\can_serial_probe.py"
			],
			"group": "test"
		},
		{
			"label": "Upload to COM5",
			"type": "shell",
			"command": "pio",
			"args": [
				"run",
				"--target",
				"upload",
				"--upload-port",
				"COM5",
				"-e",
				"waveshare_7in"
			],
			"group": "build"
		}
	]
}